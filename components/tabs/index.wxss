/* components/tabs/index.wxss */
.container {
  height: 100vh;
  background-color: #eee;
}

.tab-list {
  display: flex;
}

.tab {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  background-color: #fff;
  padding: 0 0 8rpx;
  line-height: 54rpx;
  flex-grow: 1;
}

.underline {
  margin: 0 auto;
  height: 8rpx;
  width: 120rpx;
  background-color:transparent;
  border-radius: 4rpx;
}
.underline.active{
  background-color: green;
}
.tab-content {
  height: calc(100vh - 62rpx);
  /* background-color: green; */
}

.swiper,
.swiper-item {
  height: 100%;
}